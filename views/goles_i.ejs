    <% for(var i=0 ; i < plantel_equipo_local.length; i++) { %>

    <div class="">

     

      <input type="number" name="Id" value="<%= plantel_equipo_local[i].ID %>" placeholder="plantel_equipo_local[i].ID %>" >
